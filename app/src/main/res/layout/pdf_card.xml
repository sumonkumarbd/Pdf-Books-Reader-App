<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="@dimen/_100dp"
    android:layout_height="@dimen/_140dp"
    android:background="@drawable/card_style"
    android:layout_marginHorizontal="@dimen/_5dp"
    android:layout_marginTop="@dimen/_5dp"
    android:elevation="@dimen/_5dp"
    android:layout_gravity="start">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:background="@drawable/titlecard_for_redius"
        android:scaleType="centerCrop"
        android:elevation="@dimen/_10dp"
        android:src="@drawable/bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingVertical="@dimen/_3dp"
        android:elevation="@dimen/_10dp"
        android:background="@drawable/titlecard_for_redius"
        >
        <TextView
            android:id="@+id/titleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="titleName"
            android:textSize="@dimen/_8sp"
            android:maxLength="20"
            android:layout_marginHorizontal="@dimen/_5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/authorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="authorName"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_5dp"
            android:maxLength="20"
            android:textSize="@dimen/_5sp" />
    </LinearLayout>

</RelativeLayout>

</LinearLayout>