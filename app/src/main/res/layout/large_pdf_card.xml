<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_200dp"
        android:background="@drawable/card_style"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:background="@drawable/titlecard_for_redius"
            android:scaleType="centerCrop"
            android:src="@drawable/kalyani_jibananda_das" />

        <ImageView
            android:id="@+id/newTag"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_4dp"
            android:layout_marginTop="@dimen/_minus_5dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tag_new"
            android:visibility="invisible"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:paddingVertical="@dimen/_3dp"
            android:background="@drawable/titlecard_for_redius"
            >
            <TextView
                android:id="@+id/titleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:text="titleName"
                android:textSize="@dimen/_12sp"
                android:layout_marginHorizontal="@dimen/_5dp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/authorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="authorName"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginHorizontal="@dimen/_5dp"
                android:singleLine="true"
                android:textSize="@dimen/_10sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>